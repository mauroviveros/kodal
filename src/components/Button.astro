---
import type { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'button'> {
  variant?: 'outline' | 'filled';
}
const props = Astro.props;
props.variant = props.variant ?? 'filled';
---

<button
  class:list={[
    'hover:bg-accent hover:text-on-accent inline-flex h-8 cursor-pointer items-center gap-1 rounded-md px-3 text-sm transition-all disabled:pointer-events-none disabled:opacity-50',
    props.variant === 'outline' && 'bg-background text-on-background border',
    props.variant === 'filled' && 'bg-primary text-on-primary',
    props.class,
  ]}
  {...props}
>
  <slot />
</button>
