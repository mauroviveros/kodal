---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'fieldset'> {
  description?: string;
  required?: boolean;
  label?: string;
  input?: string;
}

const { label, description, required, class: className, input, ...props } = Astro.props;
---

<fieldset class:list={['flex flex-col gap-2', className]} {...props}>
  {
    label && (
      <label for={input} class:list="text-sm">
        {label}
        {required && <span class="text-primary">*</span>}
      </label>
    )
  }

  <slot />

  {description && <p class:list="text-on-muted text-xs">{description}</p>}
</fieldset>
