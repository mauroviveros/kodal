---
import type { HTMLAttributes } from 'astro/types';
import Fieldset from './Fieldset.astro';

interface Props extends HTMLAttributes<'input'> {
  label?: string;
  description?: string;
}

const { id, label, description, class: className, ...props } = Astro.props;
---

<Fieldset
  input={id?.toString()}
  required={Boolean(props.required)}
  description={description}
  class:list={[className]}
  label={label}
>
  <input
    id={id?.toString()}
    class="focus:ring-ring h-10 rounded-lg border bg-black/5 p-1 text-sm focus:ring-2 focus:outline-none"
    {...props}
  />
  <slot />
</Fieldset>

