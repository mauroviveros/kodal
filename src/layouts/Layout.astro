---
import '@styles';
import type { HTMLAttributes } from 'astro/types';
import Header from './components/Header.astro';
import Footer from './components/Footer.astro';

interface Props extends HTMLAttributes<'main'> {
  withContainer?: boolean;
  showHeader?: boolean;
  showFooter?: boolean;
  title?: string;
}
const { class: className, withContainer = true, showHeader = true, showFooter = true, title = 'Kodal', ...props } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#FEFBF4" />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body class="bg-background text-on-background **:border-border flex min-h-dvh flex-col">
    {
      showHeader && (
        <Header>
          <slot name="actions" slot="actions" />
        </Header>
      )
    }

    <main
      class:list={['flex grow flex-col gap-8', { 'container mx-auto px-4 py-8': withContainer }, { 'mt-16': showHeader }, className]}
      {...props}
    >
      <slot />
    </main>

    {showFooter && <Footer />}
  </body>
</html>
